@model CalorieBurnMgt.Models.User

@{
    ViewBag.Title = "Dashboard & Membership";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5" style="max-width:600px;">
    <h2 class="mb-4 text-center">Welcome, @Model.FullName!</h2>

    <!-- User basic information -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <p><strong>Age:</strong> @Model.Age</p>
            <p><strong>Weight:</strong> @Model.Weight kg</p>
            <p><strong>Height:</strong> @Model.Height cm</p>
            <p><strong>BMI:</strong> @Model.BMI:F2</p>
            <p><strong>Total Calorie Balance:</strong> @Model.TotalCalorieBalance</p>
            <p><strong>Membership:</strong> @(Model.IsPremium ? "Premium" : "Free")</p>
            @if (Model.IsPremium && Model.PremiumExpireDate != null)
            {
                <p><strong>Expires:</strong> @Model.PremiumExpireDate?.ToString("yyyy-MM-dd")</p>
            }
        </div>
    </div>

    <!-- Free / Premium module buttons -->
    <div class="mb-4 text-center">
        <button onclick="location.href='/Modules/Free'" class="btn btn-primary me-2">Free Module</button>

        <button onclick="location.href='@((Model.IsPremium) ? "/Modules/Premium" : "#")'"
                class="btn @(Model.IsPremium ? "btn-success" : "btn-secondary") me-2"
                @(Model.IsPremium ? "" : "disabled")>
            Premium Module
        </button>

        @if (!Model.IsPremium)
        {
            <!-- Show upgrade membership button -->
            <a href="/Membership/Upgrade" class="btn btn-warning">Upgrade to Premium $9.99</a>
        }
    </div>

    <!-- Existing membership action buttons -->
    <div class="mb-4 text-center">
        @if (!Model.IsPremium)
        {
            <form asp-action="UpgradeMembership" method="post" class="d-inline">
                <button type="submit" class="btn btn-success">Upgrade to Premium</button>
            </form>
        }
        else
        {
            <form asp-action="CancelMembership" method="post" class="d-inline">
                <button type="submit" class="btn btn-danger">Cancel Membership</button>
            </form>
        }
    </div>

    <!-- Logout -->
    <form asp-action="Logout" method="post" class="text-center">
        <button type="submit" class="btn btn-secondary">Logout</button>
    </form>

    <!-- Display operation messages -->
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info mt-3 text-center">@TempData["Message"]</div>
    }
</div>
