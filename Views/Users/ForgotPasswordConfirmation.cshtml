@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}

@if (TempData["DemoResetLink"] != null && !string.IsNullOrEmpty(TempData["DemoResetLink"].ToString()))
{
    <h4>Reset Link (for testing):</h4>
    <p><a href="@TempData["DemoResetLink"]" target="_blank">@TempData["DemoResetLink"]</a></p>
}
