@model CalorieBurnMgt.Models.User

@{
    ViewBag.Title = "Membership Management";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5" style="max-width:600px;">
    <h2 class="mb-4 text-center">Membership Management</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <p><strong>Username:</strong> @Model.UserName</p>
            <p><strong>Full Name:</strong> @Model.FullName</p>
            <p><strong>Membership Status:</strong> @(Model.IsPremium ? "Premium" : "Free")</p>
            @if (Model.IsPremium && Model.PremiumExpireDate != null)
            {
                <p><strong>Expires on:</strong> @Model.PremiumExpireDate?.ToString("yyyy-MM-dd")</p>
            }
        </div>
    </div>

    <div class="d-flex justify-content-between">
        @if (!Model.IsPremium)
        {
            <form asp-action="UpgradeMembership" method="post">
                <button type="submit" class="btn btn-primary w-100 me-2">Upgrade to Premium</button>
            </form>
        }
        else
        {
            <form asp-action="CancelMembership" method="post">
                <button type="submit" class="btn btn-danger w-100 ms-2">Cancel Membership</button>
            </form>
        }
    </div>

    <div class="mt-4 text-center">
        <a asp-controller="Home" asp-action="Index">Back to Home</a>

    </div>
</div>
