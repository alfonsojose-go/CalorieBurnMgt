@model CalorieBurnMgt.Models.Food

@{
    ViewData["Title"] = "Add Calories";
}
<h2 class="align-content-center">@ViewData["Title"]</h2>
<form asp-controller="Calorie" asp-action="AddCalorie" method="post">
    <div id="food-items-container">
        <div class="food-item mb-2">
            <div class="input-group">
                <input type="date" name="DateConsumed[]" class="form-control" />
                <select name="FoodName[]" class="form-control food-select">
                    <option value="">-- Select a food --</option>
                    @if (ViewBag.Foods != null)
                    {
                        foreach (var food in ViewBag.Foods)
                        {
                            <option value="@food.Name" data-calories="@food.Calories">@food.Name</option>
                        }
                    }
                </select>
                <input type="number" name="FoodCalories[]" class="form-control calorie-input" placeholder="Calories" readonly />
                <button type="button" class="btn btn-outline-danger remove-food">Remove</button>
            </div>
        </div>
    </div>
    <button type="button" id="add-food" class="btn btn-outline-primary mt-2">Add Another Food</button>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Add Total Calories</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
    </div>
</form>

@section Scripts {
    <script>
        // Handle food selection change
        document.addEventListener('change', function(e) {
            if (e.target.classList.contains('food-select')) {
                const selectedOption = e.target.options[e.target.selectedIndex];
                const calories = selectedOption.getAttribute('data-calories');
                const calorieInput = e.target.closest('.input-group').querySelector('.calorie-input');
                calorieInput.value = calories || '';
            }
        });

        // Add new food item
        document.getElementById('add-food').addEventListener('click', function() {
            const container = document.getElementById('food-items-container');
            const newFood = `
                <div class="food-item mb-2">
                    <div class="input-group">
                        <input type="date" name="DateConsumed[]" class="form-control" />
                        <select name="FoodName[]" class="form-control food-select">
                            <option value="">-- Select a food --</option>
                            @if (ViewBag.Foods != null)
                            {
                                    foreach (var food in ViewBag.Foods)
                                    {
                                            @Html.Raw($"<option value='{food.Name}' data-calories='{food.Calories}'>{food.Name}</option>")
                                    }
                            }
                        </select>
                        <input type="number" name="FoodCalories[]" class="form-control calorie-input" placeholder="Calories" readonly />
                        <button type="button" class="btn btn-outline-danger remove-food">Remove</button>
                    </div>
                </div>
            `;
            container.insertAdjacentHTML('beforeend', newFood);
        });

        // Remove food item
        document.addEventListener('click', function(e) {
            if (e.target.classList.contains('remove-food')) {
                e.target.closest('.food-item').remove();
            }
        });
    </script>
}