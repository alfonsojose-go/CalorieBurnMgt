@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5" style="max-width: 400px;">
    <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

    @* Information tips *@
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info">
            @TempData["Message"]
        </div>
    }

    @if (TempData["DemoResetLink"] != null && !string.IsNullOrEmpty(TempData["DemoResetLink"].ToString()))
    {
        <div class="mb-3">
            <label class="form-label">Reset Link (for testing):</label>
            <input type="text" class="form-control" readonly value="@TempData["DemoResetLink"]" />
        </div>
        <div class="mb-3 text-center">
            <a class="btn btn-success w-100" href="@TempData["DemoResetLink"]" target="_blank">Open Reset Link</a>
        </div>
    }

    <div class="mt-3 text-center">
        <a asp-action="Login">Back to Login</a>
    </div>
</div>
